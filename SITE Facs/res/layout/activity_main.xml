<AutoCompleteTextView android:id="@+id/myautocomplete"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="8dp"
android:layout_marginTop="2dp"
android:layout_marginRight="8dp"
android:layout_marginBottom="2dp"
android:completionThreshold="1"
android:hint="Search Faculty Name"
android:textSize="22sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#056F9D"
    android:orientation="horizontal"
    android:weightSum="100" >
    <TextView android:id="@+id/tv_1"
        android:textColor="#FFFFFF"
        android:gravity="left"
        android:paddingLeft="50dp"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_weight="40"
        android:text="Name">
    </TextView>
    <TextView android:id="@+id/tv_2"
        android:textColor="#FFFFFF"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_weight="60"
        android:text="Cabin No">
    </TextView>

</LinearLayout>

<ListView
    android:id="@+id/lv_country"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
</ListView>
